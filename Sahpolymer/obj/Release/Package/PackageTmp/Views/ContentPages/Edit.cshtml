@model WorkWellPipe.Models.ContentPages

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ContentPages</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.PageName)
        @Html.HiddenFor(model => model.PageCode)
        @Html.HiddenFor(model => model.CreatedDate)
        <div class="form-group">
            @Html.LabelFor(model => model.PageName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.PageName
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PageDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <input type="hidden" id="PageDescription" dirname="" value="@Model.PageDescription" class="ContentDescription form-control" name="PageDescription" />
                @Html.ValidationMessageFor(model => model.PageDescription, "", new { @class = "text-danger" })

                <div id="txtEditor"></div>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
		$(document).ready( function() {

            $("#txtEditor").Editor();
            $("#txtEditor").Editor('setText', $("#PageDescription").val());

    });
    </script>
}
